# Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Database Configuration
DB_HOST=postgres-primary
DB_PORT=5432
DB_NAME=sierra_sync_prod
DB_USER=sierra_sync_user
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_REPL_USER=replication_user
DB_REPL_PASSWORD=CHANGE_THIS_REPLICATION_PASSWORD

# Redis Configuration
REDIS_HOST=redis-master
REDIS_PORT=6379
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-key

# JWT Secrets (Generate with: openssl rand -base64 32)
JWT_ACCESS_SECRET=GENERATE_NEW_SECRET_KEY_HERE
JWT_REFRESH_SECRET=GENERATE_DIFFERENT_SECRET_KEY_HERE

# n8n Configuration
N8N_HOST=n8n.sierrasync.com
N8N_WEBHOOK_URL=https://n8n.sierrasync.com/webhook
N8N_ENCRYPTION_KEY=GENERATE_N8N_ENCRYPTION_KEY
N8N_API_KEY=your-n8n-api-key

# Sierra Interactive API
SIERRA_API_KEY=your-sierra-api-key
SIERRA_API_URL=https://api.sierrainteractive.com
SIERRA_WEBHOOK_SECRET=your-sierra-webhook-secret
SIERRA_TENANT_ID=your-tenant-id

# CRM Credentials - HubSpot
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret
HUBSPOT_REDIRECT_URI=https://sierrasync.com/api/auth/hubspot/callback

# CRM Credentials - Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
SALESFORCE_REDIRECT_URI=https://sierrasync.com/api/auth/salesforce/callback
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# CRM Credentials - Zoho
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
ZOHO_REDIRECT_URI=https://sierrasync.com/api/auth/zoho/callback
ZOHO_REFRESH_TOKEN=your-zoho-refresh-token

# Monitoring & Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id
GRAFANA_USER=admin
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# Email Configuration (SMTP)
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=your-sendgrid-api-key
SMTP_FROM_EMAIL=notifications@sierrasync.com
SMTP_FROM_NAME=Sierra Sync

# Slack Integration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_CHANNEL_ID=C1234567890

# Payment Processing (Stripe)
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# Application Settings
NODE_ENV=production
APP_URL=https://sierrasync.com
API_URL=https://sierrasync.com/api
CORS_ORIGIN=https://sierrasync.com

# Security Settings
SESSION_SECRET=GENERATE_STRONG_SESSION_SECRET
ENCRYPTION_KEY=GENERATE_32_BYTE_ENCRYPTION_KEY
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Feature Flags
ENABLE_MULTI_TENANCY=true
ENABLE_WEBHOOK_VALIDATION=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_AI_LEAD_SCORING=false
ENABLE_WHITE_LABEL=false

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=sierra-sync-backups
BACKUP_S3_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/letsencrypt/live/sierrasync.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/sierrasync.com/privkey.pem
LETSENCRYPT_EMAIL=admin@sierrasync.com

# Performance Tuning
MAX_POOL_SIZE=20
WEB_CONCURRENCY=4
NODE_MAX_OLD_SPACE_SIZE=4096
WORKER_THREADS=4

# Logging
LOG_LEVEL=warn
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=/var/log/sierra-sync

# Cache Settings
CACHE_TTL=3600
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=10000

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_MAX_RETRIES=3
QUEUE_RETRY_DELAY=5000

# Webhook Settings
WEBHOOK_TIMEOUT=30000
WEBHOOK_MAX_RETRIES=3
WEBHOOK_RETRY_DELAY=1000

# API Versioning
API_VERSION=v1
API_DEPRECATION_HEADER=true

# Geographic Settings
DEFAULT_TIMEZONE=America/New_York
DEFAULT_LOCALE=en-US
DEFAULT_CURRENCY=USD